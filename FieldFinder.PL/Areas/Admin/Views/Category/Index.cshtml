@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Categories List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-outline-primary ">
                <i class="bi bi-patch-plus"></i> &nbsp; Add New Category
            </a>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <br/>
    <table class="table table-striped table-hover mt-3 ">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(C => C.Code)</td>
                <td>@Html.DisplayNameFor(C => C.Name)</td>
                <td>@Html.DisplayNameFor(C => C.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Code</td>
                    <td>@category.Name</td>
                    <td>@category.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-id="@category.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@category.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@category.Id"><i class="fas fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" mt-5 alert alert-warning">
        <h3>There is no Categories.</h3>
        </div>
}

